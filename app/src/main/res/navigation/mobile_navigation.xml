<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">
    <fragment
        android:id="@+id/navigation_profile"
        android:name="phu.nguyen.dateme.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/navigation_explore"
        android:name="phu.nguyen.dateme.ui.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" />
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="phu.nguyen.dateme.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment" >
        <action
            android:id="@+id/action_navigation_dashboard_to_swipeProfileFragment"
            app:destination="@id/swipeProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_likes"
        android:name="phu.nguyen.dateme.ui.likes.LikesFragment"
        android:label="fragment_likes"
        tools:layout="@layout/fragment_likes" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="phu.nguyen.dateme.ui.profile.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/swipeProfileFragment"
        android:name="phu.nguyen.dateme.ui.swipeProfile.SwipeProfileFragment"
        android:label="swipe_profile_fragment"
        tools:layout="@layout/swipe_profile_fragment" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>