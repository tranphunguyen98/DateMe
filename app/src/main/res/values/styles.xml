<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="btnWhiteTransparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_round_white_transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="btnWhite" parent="btnWhiteTransparent">
        <item name="android:background">@drawable/button_round_white</item>
    </style>

    <style name="tabImageSwipe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="textNormalWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/roboto_slab_light</item>
    </style>

    <style name="textNormalGray" parent="textNormalWhite">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="textTitleNormalWhite">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="textTitleBoldWhite" parent="textTitleNormalWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitleNormalBlack" parent="textTitleNormalWhite">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textTitleBoldBlack" parent="textTitleNormalBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_circle_gray_normal">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/btn_circle_gray</item>
    </style>

    <style name="text_gray_medium_14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_bold_normal">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal_18">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_normal_bold_18" parent="text_normal_18">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radioButtonGender">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageEditProfile">
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>